{
    "BlockType" : "stack",
    "Orientation" : "Vertical",
    "Height" : 35,
    "Width" : "<width>",
    "Items" : [
        {
            "BlockType" : "dock",
            "VerticalAlignment" : "Bottom",
            "HorizontalAlignment" : "Center",
            "Height" : 30,
            "Orientation" : "Vertical",
            "Items" : [
                {
                    "BlockType" : "image",
                    "Background" : "#000000",
                    "Height" : 25,
                    "Width" : 32,
                    //"Padding" : "1,1,1,1",
                    "VerticalAlignment" : "Center",
                    "ImageOptions": {
                        "Path": "{Item.Driver.Nationality.LogoPath}"
                    }
                }
            ]
        }
    ],
    "Triggers" : [
        {
            "Condition" : "{Item.Index, Converter=NumberIsEven}",
            "Property" : "Background",
            "Value" : "{GrayBG}"
        },
        {
            "Condition" : "{Item.Index, Converter=NumberEquals, Parameter=0}",
            "Setters" : [
                {
                    "Property" : "BackgroundImage",
                    "Value" : "images/borderbg.png"
                },
                {
                    "Property" : "Background",
                    "Value" : ""
                }
            ]
            
        },
        {
            "Condition" : "{Item.Index, Converter=NumberNotEquals, Parameter=0}",
            "Property" : "Height",
            "Value" : "33"
        }
    ]
}